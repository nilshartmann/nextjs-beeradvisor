{
  "name": "nextjs-heise",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "shop-backend": "cd shop-backend && pnpm install && pnpm start",
    "dev": "next dev",
    "dev:clean": "rm -rf ./.next && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:start": "docker-compose up -d",
    "db:generate-client": "prisma generate",
    "db:reset": "prisma db push --force-reset && prisma db seed"
  },
  "prisma": {
    "seed": "ts-node --esm prisma/seed.mts"
  },
  "dependencies": {
    "@prisma/client": "^4.16.1",
    "@types/node": "20.3.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "eslint": "8.43.0",
    "eslint-config-next": "13.5.3",
    "next": "13.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.2",
    "prettier": "^2.8.8",
    "prisma": "^4.16.1",
    "ts-node": "^10.9.1"
  }
}
